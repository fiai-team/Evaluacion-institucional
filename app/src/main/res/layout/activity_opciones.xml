<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context=".Opciones" >

    <LinearLayout
        android:id="@+id/opcion_activar_notificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_opciones"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_opciones_margin"
        android:paddingLeft="@dimen/activity_opciones_margin"
        android:paddingTop="@dimen/activity_opciones_margin">

        <CheckBox
            android:id="@+id/chk_notificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_opciones_margin"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activar NotificaciÃ³n"
            android:textColor="#222"
            android:textSize="@dimen/activity_opciones_titulo"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_opciones_margin_top"
        android:paddingLeft="@dimen/activity_opciones_margin"
        android:text="Utilizar Cronograma:"
        android:textSize="@dimen/activity_opciones_titulo"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_opciones_texto"
            android:checked="false"
            android:text="General"
            android:textDirection="ltr" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_opciones_texto"
            android:layout_height="wrap_content"
            android:text="Facultad 1" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_opciones_texto"
            android:layout_height="wrap_content"
            android:text="Facultad 2" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_opciones_texto"
            android:layout_height="wrap_content"
            android:text="Facultad 4" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_opciones_texto"
            android:layout_height="wrap_content"
            android:text="Facultad CENED" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_opciones_margin_top"
        android:paddingLeft="@dimen/activity_opciones_margin"
        android:text="Tiempo de Recordatorio"
        android:textSize="@dimen/activity_opciones_titulo"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>