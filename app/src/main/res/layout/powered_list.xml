<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="@dimen/activity_main_ancho_iconos"
        android:layout_height="@dimen/activity_main_ancho_iconos"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="@dimen/activity_opciones_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/activity_main_texto" />

        <TextView
            android:id="@+id/work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginBottom="@dimen/powered_margin_bottom"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/powered_correo" />

        <TextView
            android:id="@+id/cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargo"
            android:textSize="@dimen/activity_cronograma_lista_texto" />

    </LinearLayout>


</LinearLayout>